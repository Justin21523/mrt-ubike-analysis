# TDX OAuth2 client credentials (request from TDX)
TDX_CLIENT_ID=your_client_id
TDX_CLIENT_SECRET=your_client_secret

# Optional: override base URLs (usually not needed)
# TDX_BASE_URL=https://tdx.transportdata.tw/api/basic/v2
# TDX_TOKEN_URL=https://tdx.transportdata.tw/auth/realms/TDXConnect/protocol/openid-connect/token

# Optional: client-side throttling to reduce rate limiting (especially for paging endpoints)
# TDX_MIN_REQUEST_INTERVAL_S=0.2
# TDX_REQUEST_JITTER_S=0.05
# TDX_MAX_PAGES=100
#
# Optional: cache station metadata on disk (uses config.cache.*; reduces repeated API calls)
# TDX_CACHE_STATIONS=true

# App config (optional)
# METROBIKEATLAS_CONFIG_PATH=config/default.json
# METROBIKEATLAS_DEMO_MODE=false
