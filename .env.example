# TDX OAuth2 client credentials (request from TDX)
TDX_CLIENT_ID=your_client_id
TDX_CLIENT_SECRET=your_client_secret

# Optional: override base URLs (usually not needed)
# TDX_BASE_URL=https://tdx.transportdata.tw/api/basic/v2
# TDX_TOKEN_URL=https://tdx.transportdata.tw/auth/realms/TDXConnect/protocol/openid-connect/token

# Optional: client-side throttling to reduce rate limiting (especially for paging endpoints)
# TDX_MIN_REQUEST_INTERVAL_S=0.2
# TDX_REQUEST_JITTER_S=0.05
# TDX_MAX_PAGES=100
#
# Optional: cache station metadata on disk (uses config.cache.*; reduces repeated API calls)
# TDX_CACHE_STATIONS=true

# Bronze retention & disk safety (for long-running collector)
# BRONZE_RETAIN_AVAIL_FILES_PER_CITY=500
# BRONZE_RETAIN_AVAIL_DAYS=3
# BRONZE_RETAIN_STATIONS_FILES_PER_CITY=30
# BRONZE_CLEANUP_INTERVAL_SECONDS=600
# BRONZE_MAX_BYTES=0
# MIN_FREE_DISK_BYTES=2147483648  # 2GiB

# Bronze archiving (scheduler)
# - Archives old Bronze JSON into `data/archive/bronze/**/YYYY-MM-DD.tar.gz`
# - Deletes old JSON after archiving, to keep disk bounded while retaining history
# ARCHIVE_BRONZE_OLDER_THAN_DAYS=3
# ARCHIVE_DELETE_AFTER=true
# ARCHIVE_MIN_FREE_DISK_BYTES=2147483648  # 2GiB; prune oldest archives if free disk drops below this
# ARCHIVE_MAX_BYTES=0  # optional cap on total archive size (bytes); 0 disables

# App config (optional)
# METROBIKEATLAS_CONFIG_PATH=config/default.json
# METROBIKEATLAS_DEMO_MODE=false

# Storage options (optional)
# - For large long-running datasets, prefer SQLite (build via `python scripts/build_silver.py --write-sqlite`)
# METROBIKEATLAS_STORAGE=sqlite
# METROBIKEATLAS_LAZY_BIKE_TS=true

# Uvicorn/proxy (optional, useful in Docker/reverse proxy)
# METROBIKEATLAS_HOST=0.0.0.0
# METROBIKEATLAS_PORT=8000
# METROBIKEATLAS_PROXY_HEADERS=true
# METROBIKEATLAS_FORWARDED_ALLOW_IPS=*
# METROBIKEATLAS_TIMEOUT_KEEP_ALIVE=75
# METROBIKEATLAS_TIMEOUT_GRACEFUL_SHUTDOWN=30
